<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:id="@+id/TableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BisanHeader"
       >



            <TableRow
                android:id="@+id/tableRow_expandableListActivity"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/totalItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Account ID "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/accountIDBill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="2"
                    android:background="@android:drawable/editbox_background"
                    android:maxLines="1"
                    android:selectAllOnFocus="true"
                    android:singleLine="true" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/viewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_general_style"
                    android:text="View Water Bills"
                    android:textColor="@color/WHITE"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/viewResult2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_general_style"
                    android:text="Pay Bill"
                    android:textColor="@color/WHITE"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/red_cherry"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>

    </ScrollView>

</RelativeLayout>